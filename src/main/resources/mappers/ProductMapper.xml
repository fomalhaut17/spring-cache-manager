<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ProductMapper">
    <!-- Define the productCache for this mapper -->
    <cache type="PERPETUAL">
        <property name="size" value="512"/>
        <property name="clearInterval" value="1800000"/> <!-- 30 minutes -->
    </cache>

    <select id="getProductName" resultType="java.lang.String">
        SELECT 'Sample Product' AS productName
    </select>
</mapper>
